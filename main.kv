<ScreenManager>:
    canvas.before:
        Color:
            rgba: (0,100/250,100/250,1)
        Rectangle:
            pos: self.pos
	        size: self.size


    Menu:
        name: "Menu"
    Games:
        name: "Games"
    Rules:
        name: "Rules"


<Menu>:
    BoxLayout:
        orientation: "vertical"
        padding: 5

        Image:
            source: 'images/itraplogo22.png'

        BoxLayout:
            #orientation "vertical"
            padding: 15
            space: 10
            Button:
                text: "Perox"
                size_hint: ( .5, .3)
                #width: 100
                #height: 50
                pos_hint: {"left": 1}
                font_size: 32
                on_release:
                    root.manager.current = 'Games'
                    root.manager.transition.direction = 'left'
            Button:
                text: "Perox 15%"
                size_hint: (.5, .3 )
                pos_hint: {"right": 1}
                font_size: 32
                on_release:
                    root.manager.current = 'Rules'
                    root.manager.transition.direction = 'left'
<Games>:
    text_input1: text_input1
    res2o25: res2o25
    resozgal5: resozgal5
    resppa5: resppa5
    resml5: resml5

    text_input2: text_input2
    resdil5: resdil5
    resdil5oz: resdil5oz
    rdilpaa5: rdilpaa5
    resdil5ml: resdil5ml

    text_input3: text_input3
    resfldil5: resfldil5
    resflh2o5: resflh2o5
    resflpaa5: resflpaa5
    resflml5: resflml5

# Aqui va hoja de calculos para Perox 5

    GridLayout:
        rows: 10
        padding: 5
        size_hint: 1, 1
        GridLayout:
            cols: 3
            size_hint: 1, .3
            Button:
                text: "Back to Menu"
                font_size: 20
                on_release:
                    root.manager.current = 'Menu'
                    root.manager.transition.direction = 'right'
            Label:
                text: "Perox"
                font_size: 25
            Button:
                text: "Reset"
                font_size: 25
                on_release: root.clear()

        GridLayout:
            cols: 2
            size_hint: 1,.3
            padding: 5
            Label:
                text: "Dilute to 1:"
                bold: True
                font_size: 20
                text_size: self.size
                halign: 'right'
                valign: 'center'
            TextInput:
                id: text_input1
                hint_text:"Enter here"
                halign: 'center'
                valign: 'center'
                font_size: 30
                multiline:False
                input_type: 'number'
                input_filter: 'int'

        GridLayout:
            cols: 3
            padding: 5
            font_size: 10
            size_hint: 1, .3
            Button:
                text: "CALCULATE"
                on_release:
                    root.calcdil5()

        GridLayout:     #aqui va los calculos de H2O2
